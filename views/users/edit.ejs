<div class="container mt-5">
   <div class="row">
      <h2 class="mb-5">Edit profile</h2>
      <div class="card p-3 mb-3">
         <form action="/profile/<%= user.username %>/update/?_csrf=<%=csrfToken%>" method="post"
            enctype="multipart/form-data">

            <div class="form-group mb-2">
               <label for="id_about">About Me</label>
               <textarea type="text" class="form-control" id="id_about" name="about"
                  rows="5"><%= user.about %></textarea>
            </div>
            <div class="form-group mb-2">
               <div class="d-flex">
                  <div class="px-1">
                     Visibility
                  </div>
                  <label for="public" class="px-1">
                     <input type="radio" class="w-auto" id="public" name="visible" <% if(user.visible){%> checked
                        <% } %> value="true">
                     Public
                  </label>
                  <label for="private" class="px-1">
                     <input type="radio" class="w-auto" id="private" name="visible" <% if(!user.visible){%> checked
                        <% } %> value="false">
                     Private
                  </label>
               </div>
            </div>
            <div class="form-group mb-2">
               <label for="id_image">Profile Image</label>
               <input type="file" class="form-control" id="id_image" name="image" accept="image/*">
            </div>
            <!-- <input type="hidden" name="_csrf" value="<%# csrfToken %>"> -->
            <button type="submit" class="btn btn-primary">Submit</button>
         </form>
         <br>
      </div>
   </div>
</div>